<% include partials/header %>

<section id="heading" class="py-5 text-light text-center">
  <div class="container">
    <h1 class="display-2 mb-0"><%= title %></h1>
    <p class="lead subtitle mb-0">Search for local playing movies</p>
  </div>
</section>

<section id="singleMovie" class="py-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="display-4 text-center text-md-left"><%= movies.title %></h1>
        <hr>
        <h2 class="text-center text-md-left tagline"><%= movies.tagline %></h2>
        <div class="row py-5 text-center text-md-left">
          <div class="col-lg-4 col-md-6 pb-4 pb-md-0">
            <a href="<%= movies.homepage %>" target="_blank">
              <img class="img-fluid" src="<%= imageBaseUrl + movies.poster_path %>" alt="<%= movies.title %>">
            </a>
          </div>
          <div class="col-lg-8 col-md-6 mt-4 mt-md-0">
            <p class="lead"><span>Genre</span> - <%= movies.genres[0].name %></p>
            <p class="lead"><span>Overview</span> - <%= movies.overview %></p>
            <p class="lead"><span>Production</span> - 
              <% movies.production_companies.forEach((company, index) => { %>
                <% if(index === movies.production_companies.length - 1) { %>
                  <%= company.name %>
                <% }else { %>
                  <%= company.name %>, 
                <% } %>
              <% }); %>
            </p>
            <p class="lead"><span>Production Countries</span> -
              <% movies.production_countries.forEach((country, index) => { %>
                <% if(index === movies.production_countries.length - 1) { %>
                  <%= country.name %>
                <% }else { %>
                  <%= country.name %>,
                <% } %>
              <% }); %>
            </p>
            <p class="lead"><span>Release Date</span> - <%= movies.release_date %></p>
            <p class="lead"><span>Runtime</span> - <%= movies.runtime %> minutes</p>
          </div>
        </div>
        <div class="d-flex">
          <a href="/" class="text-dark backBtn d-inline-block mt-3 mx-auto mx-md-0"><i class="fas fa-chevron-circle-left"></i> Go Back</a>
        </div>
      </div>
    </div>
  </div>
</section>

<% include partials/footer %>