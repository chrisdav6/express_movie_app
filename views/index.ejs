<% include partials/header %>

  <section id="heading" class="py-5 bg-dark text-light text-center">
    <div class="container">
      <h1 class="display-2 mb-0"><%= title %></h1>
      <p class="lead subtitle mb-0">Search for local playing movies</p>
    </div>
  </section>

  <section id="movieList" class="py-5 text-center">
    <div class="container">
      <div class="row">
        <% movies.forEach((movie) => { %>
          <div class="col-lg-4 col-md-6">
            <div class="pb-5">
              <a href="/movie/<%= movie.id %>">
                <img class="pb-5 img-fluid" src="<%= imageBaseUrl + movie.poster_path %>" alt="<%= movie.title %>">
              </a>
              <h2><%= movie.title %></h2>
              <hr>
              <p class="lead"><%= movie.overview %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

<% include partials/footer %>
